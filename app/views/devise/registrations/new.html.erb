<div class="wrap" id="form">
  <div>
    <div class="headline"><%= t('sign_up') %></div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label t('email') %>
        <%= f.email_field :email, autocomplete: "on", autofocus: true, class: ["email"]  %>
      </div>

      <div class="field">
        <%= f.label t('password') %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length.to_s + t('characters_minimum') %>)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: ["password"] %>
      </div>

      <div class="field">
        <%= f.label t('password_confirmation') %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: ["password"] %>
      </div>

      <div class="actions">
        <%= f.submit t('sign_up'), class: ["btn"] %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
<div class="wrap" id="login_status">
  <div>
    <%= link_to t('main'), '/', :method => :get, class: ['btn'] %>
  </div>
</div>
